<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginEnd="@dimen/_10sdp">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerview_wallets"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>

            <LinearLayout
                android:id="@+id/banner_create_wallet"
                android:layout_width="@dimen/_280sdp"
                android:layout_height="@dimen/_160sdp"
                android:background="@drawable/background_purple"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingVertical="@dimen/_8sdp"
                android:paddingHorizontal="@dimen/_20sdp">

                <ImageView
                    android:layout_width="@dimen/_38sdp"
                    android:layout_height="@dimen/_38sdp"
                    android:background="@drawable/background_purple_button"
                    android:padding="@dimen/_4sdp"
                    android:src="@drawable/ic_add"
                    app:tint="@color/purple" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:letterSpacing="0.02"
                    android:text="@string/create_a_free_wallet"
                    android:textColor="@color/primary_text"
                    android:textSize="@dimen/_22ssp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:text="@string/banner_subtitle"
                    android:textColor="@color/purple_pastel"
                    android:textSize="@dimen/_13ssp" />

            </LinearLayout>

        </LinearLayout>
    </HorizontalScrollView>
</layout>