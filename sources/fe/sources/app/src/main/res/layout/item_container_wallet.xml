<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <LinearLayout
        android:id="@+id/banner_create_wallet"
        android:layout_width="@dimen/_280sdp"
        android:layout_height="@dimen/_160sdp"
        android:layout_marginEnd="@dimen/_8sdp"
        android:background="@drawable/background_yellow"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/_20sdp"
        android:paddingVertical="@dimen/_20sdp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginTop="@dimen/_4sdp"
                android:letterSpacing="0.02"
                android:text="@string/my_main_account"
                android:textColor="@color/primary_text"
                android:textSize="@dimen/_15ssp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/image_copy"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_alignParentEnd="true"
                android:src="@drawable/ic_copy"
                app:tint="@color/primary_icon" />
        </RelativeLayout>

        <TextView
            android:id="@+id/text_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_4sdp"
            android:letterSpacing="0.02"
            android:text="0x...."
            android:maxLines="2"
            android:ellipsize="middle"
            android:textColor="@color/primary_text"
            android:textSize="@dimen/_13ssp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_8sdp"
            android:gravity="center_vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_alignParentBottom="true">

                <TextView
                    android:id="@+id/text_coin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0 Coin"
                    android:textColor="@color/primary_text"
                    android:textSize="@dimen/_20ssp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/text_ratio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/ratio"
                    android:textColor="@color/primary_text"
                    android:textSize="@dimen/_15ssp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true">

                <ImageView
                    android:id="@+id/image_deposit"
                    android:layout_width="@dimen/_36sdp"
                    android:layout_height="@dimen/_36sdp"
                    android:src="@drawable/ic_file_download"
                    android:padding="@dimen/_3sdp"
                    android:background="@drawable/background_round_yellow_button"
                    app:tint="@color/yellow"/>

                <ImageView
                    android:id="@+id/image_send"
                    android:layout_width="@dimen/_36sdp"
                    android:layout_height="@dimen/_36sdp"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:src="@drawable/ic_file_upload"
                    android:padding="@dimen/_3sdp"
                    android:background="@drawable/background_round_yellow_button"
                    app:tint="@color/yellow"/>
            </LinearLayout>

        </RelativeLayout>


    </LinearLayout>
</layout>