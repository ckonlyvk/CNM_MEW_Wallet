<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="@dimen/_8sdp"
        android:background="@color/secondary"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize">

            <ImageView
                android:id="@+id/image_close_bottom_sheet"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_close"
                app:tint="@color/primary_icon" />
        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:overScrollMode="always"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_20sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="@dimen/_80sdp"
                    android:src="@drawable/astronaut"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Crypto safety 101"
                    android:textColor="@color/primary_text"
                    android:textSize="@dimen/_26ssp"
                    android:textStyle="bold"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:text="In crypto you are own bank. With that great power comes great responsibility."
                    android:textColor="@color/secondary_text"
                    android:textSize="@dimen/_15ssp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/_20sdp">

                    <TextView
                        android:layout_width="@dimen/_36sdp"
                        android:layout_height="@dimen/_36sdp"
                        android:text="1"
                        android:textColor="@color/secondary"
                        android:textSize="@dimen/_20ssp"
                        android:gravity="center"
                        android:background="@drawable/background_white"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:text="Back it up and keep your backup safe"
                        android:textColor="@color/primary_text"
                        android:textStyle="bold"
                        android:textSize="@dimen/_22ssp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:text="If you lose your wallet backup information, no one (not even MEWforce) can recover it, and you will lose your funds."
                        android:textColor="@color/secondary_text"
                        android:textSize="@dimen/_15ssp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/_20sdp">

                    <TextView
                        android:layout_width="@dimen/_36sdp"
                        android:layout_height="@dimen/_36sdp"
                        android:text="2"
                        android:textColor="@color/secondary"
                        android:textSize="@dimen/_20ssp"
                        android:gravity="center"
                        android:background="@drawable/background_white"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:text="Back it up and keep your backup safe"
                        android:textColor="@color/primary_text"
                        android:textStyle="bold"
                        android:textSize="@dimen/_22ssp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:text="If you lose your wallet backup information, no one (not even MEWforce) can recover it, and you will lose your funds."
                        android:textColor="@color/secondary_text"
                        android:textSize="@dimen/_15ssp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/_20sdp">

                    <TextView
                        android:layout_width="@dimen/_36sdp"
                        android:layout_height="@dimen/_36sdp"
                        android:text="3"
                        android:textColor="@color/secondary"
                        android:textSize="@dimen/_20ssp"
                        android:gravity="center"
                        android:background="@drawable/background_white"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:text="Back it up and keep your backup safe"
                        android:textColor="@color/primary_text"
                        android:textStyle="bold"
                        android:textSize="@dimen/_22ssp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:text="If you lose your wallet backup information, no one (not even MEWforce) can recover it, and you will lose your funds."
                        android:textColor="@color/secondary_text"
                        android:textSize="@dimen/_15ssp"/>
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:text="Stay safe out there! &lt;br /&gt;~ team MEW"
                    android:textColor="@color/secondary_text"
                    android:textSize="@dimen/_15ssp"/>

                <TextView
                    android:id="@+id/button_create_wallet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_purple"
                    android:padding="@dimen/_8sdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:text="CREATE A WALLET"
                    android:textAllCaps="true"
                    android:textColor="@color/primary_text"
                    android:textSize="@dimen/_15ssp"
                    android:textStyle="bold"/>
            </LinearLayout>

        </ScrollView>


    </LinearLayout>

</layout>